{
  // ============================================
  // ЯЗЫКОВЫЕ НАСТРОЙКИ ДЛЯ C
  // ============================================
  "[c]": {
    // Используем форматтер от Microsoft C/C++
    "editor.defaultFormatter": "ms-vscode.cpptools",
    // Форматируем C-файлы при сохранении
    "editor.formatOnSave": true,
    // Включаем семантическую подсветку
    "editor.semanticHighlighting.enabled": true
  },
  // ============================================
  // НАСТРОЙКИ РАСШИРЕНИЯ C/C++ (MICROSOFT)
  // ============================================
  // Стандарт языка (можно изменить на c99, c11)
  "C_Cpp.default.cStandard": "c17",
  // Стандарт C++ для смешанных проектов
  "C_Cpp.default.cppStandard": "c++17",
  // Режим IntelliSense (зависит от компилятора)
  "C_Cpp.default.intelliSenseMode": "windows-gcc-x64",
  // Путь к вашему компилятору C (ПРОВЕРЬТЕ ПУТЬ!)
  "C_Cpp.default.compilerPath": "C:/MinGW/bin/gcc.exe",
  "C_Cpp.default.includePath": [
    // Где искать заголовочные файлы
    "${workspaceFolder}/core/inc/**"
  ],
  "C_Cpp.autocomplete": "default",
  // Включить статический анализ
  "C_Cpp.codeAnalysis.clangTidy.enabled": true,
  // Подчеркивание ошибок в реальном времени
  "C_Cpp.errorSquiggles": "enabled",
  // ============================================
  // НАСТРОЙКИ ДЛЯ ОТЛАДКИ И АНАЛИЗА
  // ============================================
  // Показывать значения переменных прямо в коде при отладке
  "editor.inlineValues.enabled": true,
  "debug.inlineValues": "on",
  // Включить панель просмотра памяти (полезно для low-level)
  "memory-view.showMemoryPanel": true,
  // ============================================
  // ВИЗУАЛЬНЫЕ НАСТРОЙКИ ДЛЯ РАБОТЫ С КОДОМ
  // ============================================
  // Показывать все пробелы и табы
  "editor.renderWhitespace": "all",
  // Вертикальные линии для соблюдения длины строк
  "editor.rulers": [
    80,
    120
  ],
  // Включить навигационную цепочку (хлебные крошки)
  "breadcrumbs.enabled": true
}