{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "(gdb) C: Запуск отладки",
      "type": "cppdbg",
      "request": "launch",
      "program": "${fileDirname}/${fileBasenameNoExtension}.exe",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": true, // Для low-level программ лучше внешняя консоль
      "MIMode": "gdb",
      "miDebuggerPath": "C:/MinGW/bin/gdb.exe", // ПРОВЕРЬТЕ ПУТЬ!
      "setupCommands": [
        {
          "description": "Включить pretty-printing для gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "C: Компиляция текущего файла"
    }
  ]
}